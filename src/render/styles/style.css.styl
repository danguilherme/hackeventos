/*
* MIXINS
*/
center-vertical()
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);

/*
* VARIABLES
*/
/* Palette generated by Material Palette - materialpalette.com/light-green/deep-orange */
$theme-color-primary-dark = #689F38
$theme-color-primary-default = #689F38
$theme-color-primary-light = #DCEDC8
$theme-color-primary-text = #212121
$theme-color-accent-default = #FF5722
$theme-color-secondary-text = #727272
$theme-color-divider = #B6B6B6

$theme-event-color-meetup-dark = #d00
$theme-event-color-meetup-text = #d00
$theme-event-color-meetup-light = #fff1f1
$theme-event-color-conference-dark = #0d0
$theme-event-color-conference-text = #0d0
$theme-event-color-conference-light = #f1fff1
$theme-event-color-hackathon-dark = #00d
$theme-event-color-hackathon-text = #00d
$theme-event-color-hackathon-light = #f1f1ff

/*
* BASE
*/
* {
  box-sizing: border-box;
}

html
  font-family Calibri, sans-serif;
  font-size 16px
  line-height 20px

  height 100%

body
  margin 0
  padding 0
  display flex
  flex-direction column

/*
* HEADER
*/
header#main-header
  padding 0 1rem
  height header-height = 60px
  line-height header-height

  h1, p
    display inline-block
    margin 0

  nav
    float right

    ul
      margin 0
      padding 0

      &> li
        display inline-block
        padding 0 .2em

        a
          display inline-block
          text-decoration none
          color $theme-color-primary-text

        &.active a
          font-weight bold

a
  color $theme-color-primary-dark
  text-decoration none
  transition color .3s linear
  &:hover
    color darken($theme-color-primary-dark, 20%)

main
  display flex
  flex-grow 1
  overflow visible

#events,
#map
  display inline-block
  flex-direction row
  flex-wrap nowrap

#map
  flex-grow 9

  #map-canvas
    width 100%
    height 100%
    border-top-right-radius 1em

    .infobox
      width 300px
      margin-top 10px
      font-size 1rem
      background-color #fff
      border 2px solid
      border-radius 3px
      opacity .9

      &::before
        content ""
        position absolute
        top -10px
        left 138px
        height 0
        width 0

        border-left 10px solid transparent
        border-right 10px solid transparent
        border-bottom 10px solid
      div
        padding 15px

#events
  flex-grow 1
  padding 10px

  h1
    margin 10px

  ul
    list-style none
    margin 0
    padding 0

    .event-item
      content ''
      display block
      padding 10px

      border-left gray 1px solid
      border-bottom gray 1px solid
      border-left-width 5px

      background-color #fff
      transition background-color .2s linear


      .event-name,
      p
        margin 0

/**
* CUSTOM EVENTS COLORS
*/
/** EVENTS MAP INFOBOXES **/
#map #map-canvas .infobox
  &.infobox-event-type-meetup
    background-color $theme-event-color-meetup-light
    border-color $theme-event-color-meetup-dark
    &::before
      border-bottom-color $theme-event-color-meetup-dark
    a
      color $theme-event-color-meetup-text

  &.infobox-event-type-conference
    background-color $theme-event-color-conference-light
    border-color $theme-event-color-conference-dark
    &::before
      border-bottom-color $theme-event-color-conference-dark
    a
      color $theme-event-color-conference-text

  &.infobox-event-type-hackathon
    background-color $theme-event-color-hackathon-light
    border-color $theme-event-color-hackathon-dark
    &::before
      border-bottom-color $theme-event-color-hackathon-dark
    a
      color $theme-event-color-hackathon-text

/** EVENTS LIST **/
#events .event-item
  &.event-type-meetup
    border-color $theme-event-color-meetup-dark
    &.selected,
    &:hover
      background-color $theme-event-color-meetup-light
    a
      color $theme-event-color-meetup-text

  &.event-type-conference
    border-color $theme-event-color-conference-dark
    &.selected,
    &:hover
      background-color $theme-event-color-conference-light
    a
      color $theme-event-color-conference-text

  &.event-type-hackathon
    border-color $theme-event-color-hackathon-dark
    &.selected,
    &:hover
      background-color $theme-event-color-hackathon-light
    a
      color $theme-event-color-hackathon-text
