/*
* MIXINS
*/
center-vertical()
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);

/*
* BASE
*/
* {
  box-sizing: border-box;
}

html
  font-family Calibri, sans-serif;
  font-size 16px
  line-height 20px

body
  margin 0
  padding 0

/*
* HEADER
*/
header#main-header
  padding 0 1rem
  height 45px
  line-height 45px

  background-color #f2ead4

  h1, p
    display inline-block
    margin 0

  nav
    float right

    ul
      margin 0
      padding 0

      &> li
        display inline-block
        padding 0 .2em

        a
          display inline-block
          text-decoration none
          color #000

        &.active a
          font-weight bold