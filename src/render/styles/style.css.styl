/*
* MIXINS
*/
center-vertical()
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  -o-transform: translateY(-50%);
  transform: translateY(-50%);

/*
* VARIABLES
*/
/* Palette generated by Material Palette - materialpalette.com/light-green/deep-orange */
$theme-color-primary-dark = #689F38
$theme-color-primary-default = #689F38
$theme-color-primary-light = #DCEDC8
$theme-color-primary-text = #212121
$theme-color-accent-default = #FF5722
$theme-color-secondary-text = #727272
$theme-color-divider = #B6B6B6

$theme-event-color-meetup = #ffc4c4
$theme-event-color-event = #c4ffc4
$theme-event-color-hackathon = #c4c4ff

/*
* BASE
*/
* {
  box-sizing: border-box;
}

html
  font-family Calibri, sans-serif;
  font-size 16px
  line-height 20px

  height 100%

body
  margin 0
  padding 0
  display flex
  flex-direction column

/*
* HEADER
*/
header#main-header
  padding 0 1rem
  height header-height = 60px
  line-height header-height

  background-color $theme-color-primary-light

  h1, p
    display inline-block
    margin 0

  nav
    float right

    ul
      margin 0
      padding 0

      &> li
        display inline-block
        padding 0 .2em

        a
          display inline-block
          text-decoration none
          color $theme-color-primary-text

        &.active a
          font-weight bold

a
  color $theme-color-primary-dark
  text-decoration none
  transition color .3s linear
  &:hover
    color darken($theme-color-primary-dark, 20%)

main
  display flex
  flex-grow 1
  overflow visible

#events,
#map
  display inline-block
  flex-direction row
  flex-wrap nowrap

#map
  flex-grow 9

#events
  flex-grow 1
  background-color $theme-color-primary-light
  padding 10px

  h1
    margin 10px

  ul
    list-style none
    margin 0
    padding 0

    .event-item
      content ''
      display block
      padding 10px

      border-left gray 1px solid
      border-bottom gray 1px solid
      border-left-width 5px

      background-color #fff
      transition background-color .2s linear

      .event-name,
      p
        margin 0

      &.event-type-meetup
        border-color $theme-event-color-meetup
        &:hover
          background-color lighten($theme-event-color-meetup, 70%)
      &.event-type-event
        border-color $theme-event-color-event
        &:hover
          background-color lighten($theme-event-color-event, 70%)
      &.event-type-hackathon
        border-color $theme-event-color-hackathon
        &:hover
          background-color lighten($theme-event-color-hackathon, 70%)
